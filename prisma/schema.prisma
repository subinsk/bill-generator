// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  bills    Bill[]
  gstBills GstBill[]

  @@map("users")
}

model Bill {
  id          Int      @id @default(autoincrement())
  uuid        String   @unique
  title       String
  totalAmount Float    @map("total_amount")
  isDraft     Boolean  @default(true) @map("is_draft")
  userId      String   @map("user_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  user          User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  items         BillItem[]
  distributions BillDistribution[]

  @@map("bills")
}

model BillItem {
  id           Int     @id @default(autoincrement())
  billId       Int     @map("bill_id")
  name         String
  rate         Float
  quantity     Float
  allowsDecimal Boolean @map("allows_decimal")

  // Relations
  bill Bill @relation(fields: [billId], references: [id], onDelete: Cascade)

  @@map("bill_items")
}

model BillDistribution {
  id        Int     @id @default(autoincrement())
  billId    Int     @map("bill_id")
  itemName  String  @map("item_name")
  percentage Int
  quantity  Float
  amount    Float

  // Relations
  bill Bill @relation(fields: [billId], references: [id], onDelete: Cascade)

  @@map("bill_distributions")
}

model GstBill {
  id           Int      @id @default(autoincrement())
  uuid         String   @unique
  billData     String   @map("bill_data")
  companyName  String   @map("company_name")
  invoiceNo    String   @map("invoice_no")
  invoiceDate  String   @map("invoice_date")
  billedToName String   @map("billed_to_name")
  grandTotal   Float    @map("grand_total")
  finalAmount  Float    @map("final_amount")
  isDraft      Boolean  @default(true) @map("is_draft")
  userId       String   @map("user_id")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("gst_bills")
}